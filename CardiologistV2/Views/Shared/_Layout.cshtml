<!DOCTYPE html>
<html dir="ltr" lang="en-US">
<head>
<title>@ViewBag.Title - Medical </title>

<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>Medical Theme Css Template</title>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link rel="stylesheet" type="text/css" href="~/Content/Site.css" media="screen" />
<script language="javascript" src="scripts/browserdetect_lite.js" type="text/javascript"></script>
<script language="javascript" src="scripts/opacity.js" type="text/javascript"></script>
 @Styles.Render("~/Content/css")
 @Scripts.Render("~/bundles/modernizr")
</head>

<body>
<div id="main_container">
	<div class="header">
    	<div id="logo"><a href="index.html"><img src="~/Content/images/OurLogo2.gif" alt="" title="" width="200" height="100" border="0" /></a></div>
    
    	<div class="right_header">
            <div class="float-right">
            @Html.Partial("_LoginPartial")
            </div>
            <div id="menu">
                <ul>                                              
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    @*<li><a href="#" title="">Services</a></li>*@
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        
        </div>
    
    </div>
    
    
    <div id="middle_box">
    	<div class="middle_box_content"><img src="~/Content/images/banner_content.jpg" alt="" title="" /></div>
    </div>
    
    
    <div class="pattern_bg">
    
    	<div class="pattern_box">
            <div class="pattern_box_icon"><img src="~/Content/images/icon1.png" alt="" title="" width="70" height="112" /></div>
            <div class="pattern_content">
            <h1>Future <span class="blue">Medicine</span></h1>
            <p class="pat">
            Online diagnosis of ECG records taking advantage of the expertise of many cardiologist.
            </p>
            </div>
        </div>
        
        
    	<div class="pattern_box">
            <div class="pattern_box_icon"><img src="~/Content/images/icon2.png" alt="" title="" width="70" height="112" /></div>
            <div class="pattern_content">
            <h1>All <span class="blue"> your records at one place</span></h1>
            <p class="pat">
            Your entire archive can be studied by experienced cardiologist.
            </p>
            </div>
        </div>        
        
    
    </div>
    
    <div id="main_content">
    
 			<div class="box_content">
					<div class="box_title">
                    	<div class="title_icon"><img src="~/Content/images/mini_icon1.gif" alt="" title="" /></div>
                        
                        <h2>You Can<span class="dark_blue">@if (User.IsInRole("Patient")){@Html.ActionLink("Add a Record", "Create","Record")}</span></h2>
                    </div>
                    
                    <div class="box_text_content">
                    	<img src="~/Content/images/calendar.gif" alt="" title="" class="box_icon" />
                        <div class="box_text">
                        Keeping your records in one place
                        </div>
                      @*  <a href="#" class="details">+ details</a>*@
                    </div>

                    <div class="box_text_content">
                    	<img src="~/Content/images/calendar.gif" alt="" title="" class="box_icon" />
                        <div class="box_text">
                        You can review your past recordings to check up the updates.
                        </div>
                      @*  <a href="#" class="details">+ details</a>*@
                    </div>
	
            </div>
            
            
 			<div class="box_content">
					<div class="box_title">
                    	<div class="title_icon"><img src="~/Content/images/mini_icon2.gif" alt="" title="" /></div>
                        <h2>You Can<span class="dark_blue">@if (User.IsInRole("Patient")){@Html.ActionLink("Add Your Medical History", "Create","History")}@if (User.IsInRole("Doctor")) { @Html.ActionLink("Check Who Asked For Your Advice", "Index","Consultation")}</span></h2>
                    </div>
                    
                    <div class="box_text_content">
                    	<img src="~/Content/images/checked.gif" alt="" title="" class="box_icon" />
                        <div class="box_text">
                        Scan and upload your most recent records.
                        </div>
                      @*  <a href="#" class="details">+ details</a>*@
                    </div>

                    <div class="box_text_content">
                    	<img src="~/Content/images/checked.gif" alt="" title="" class="box_icon" />
                        <div class="box_text">
                        
                        </div>
                       @* <a href="#" class="details">+ details</a>*@
                    </div>
	
            </div>            
            
            
  			<div class="box_content">
					<div class="box_title">
                    	<div class="title_icon"><img src="~/Content/images/mini_icon3.gif" alt="" title="" /></div>
                        <h2>You Can<span class="dark_blue">@if (User.IsInRole("Patient")){@Html.ActionLink("Ask a Doctor !", "Create","Consultation")}</span></h2>
                    </div>
                    
                    <div class="box_text_content">
                    	<img src="~/Content/images/checked.gif" alt="" title="" class="box_icon" />
                        <div class="box_text">
                        The most talented specialists gathered in one place to serve our patients.
                        </div>
                       @* <a href="#" class="details">+ details</a>*@
                    </div>

                    <div class="box_text_content">
                    	<img src="~/Content/images/checked.gif" alt="" title="" class="box_icon" />
                        <div class="box_text">
                       Ask them for free consultation !
                        </div>
                        @*<a href="#" class="details">+ details</a>*@
                    </div>
	
            </div>           
            
            
            
            
            
            
            
            
            
         
            
            
        <div class="clear"></div>    
       </div>     
     <div id="down_content">
    <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>        
            
     <div id="footer">
     	<div class="copyright">
        @*<img src="~/Content/images/OurLogo2.gif" alt="" title="" width="160" height="70" />*@
        </div>
        <div class="center_footer">&copy; Cardiologist 2015. All Rights Reserved</div>
    	<div class="footer_links">
        <a href="http://csstemplatesmarket.com"><img src="~/Content/images/OurLogo2.gif" alt="csstemplatesmarket" title="csstemplatesmarket" border="0" width="120" height="40" /></a>
        </div>
    
    
    </div>



</div>
    
        @Scripts.Render("~/bundles/jquery")
        @*RenderSection("scripts", required: false)*@
        @if (IsSectionDefined("scripts"))
        {
            @RenderSection("scripts")
        }  
</body>
</html>
